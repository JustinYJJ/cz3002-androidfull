<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alpaca.alpacarant.ReplyMessage">


    <TextView
        android:id="@+id/replyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/replyContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/replyUser"
        android:background="#fff3f3f3"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/replyContent"
        android:background="@drawable/rect_text_edit"
        android:hint="Enter your reply"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:id="@+id/buttonCancelReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#ff229ebd"
        android:clickable="true"
        android:onClick="onCancelReplyButtonClick"
        android:text="Cancel"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonSendReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#ff229ebd"
        android:clickable="true"
        android:onClick="onSendReplyButtonClick"
        android:text="Send reply"
        android:textColor="#FFFFFF" />
</RelativeLayout>
