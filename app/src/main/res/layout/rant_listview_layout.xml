<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_unknown_profile" />

    <TextView
        android:id="@+id/rantUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/imageUser"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/rantContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageUser"
        android:textSize="15sp"
        android:background="#fff3f3f3" />

    <Button
        android:id="@+id/buttonReadRant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rantContent"
        android:text="Read more"/>

</RelativeLayout>